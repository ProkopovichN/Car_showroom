<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#423F3F"
    tools:context=".Admin.AddCarAdmin">

    <EditText
        android:id="@+id/photo"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:foregroundTint="#000000"
        android:hint="Ссылка на фото"
        android:inputType="text"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/marka"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:hint="Марка"
        android:inputType="text" />

    <EditText
        android:id="@+id/model"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:hint="Модель"
        android:inputType="text" />

    <EditText
        android:id="@+id/price"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:ems="10"
        android:hint="Цена"
        android:inputType="text" />

    <EditText
        android:id="@+id/power"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:hint="Мощность"
        android:inputType="text" />

    <EditText
        android:id="@+id/odometr"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Пробег"
        android:inputType="text" />

    <EditText
        android:id="@+id/year"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="190dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Год выпуска"
        android:inputType="text" />

    <EditText
        android:id="@+id/privod"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="260dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Привод"
        android:inputType="text" />

    <EditText
        android:id="@+id/c_passengers"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="330dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Кол-во пассажиров"
        android:inputType="text" />

    <EditText
        android:id="@+id/color"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="400dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Цвет"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:text="Добавление автомобиля"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#531313"
        android:text="Добавить" />
</FrameLayout>